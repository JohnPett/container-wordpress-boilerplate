{
  "name": "Container WordPress Boilerplate",
  "module": "index.js",
  "scripts": {
    "start": "bun run dev",
    "js-dev": "bun build ./js/index.js --outdir ./ --watch",
    "css-dev": "postcss css/tailwind.css -o css/tailwind.min.css --watch",
    "js-prd": "bun build ./js/index.js --outdir ./ --minify",
    "css-prd": "tailwind -o css/tailwind.min.css --minify",
    "lint": "eslint js/**/*.js --fix",
    "sync": "browser-sync start --proxy 'container-wordpress-boilerplate.local' --serveStatic './' --files './'",
    "dev": "concurrently \"bun run css-dev\" \"bun run js-dev\" \"bun run sync\"",
    "prd": "bun run css-prd && bun run js-prd && bun run lint",
    "prepare": "husky install",
    "stop": "dev"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "stop": "^3.1.0",
    "tailwindcss": "^3.3.3"
  }
}
