{
  "name": "wordpress-theme",
  "module": "index.js",
  "scripts": {
    "start": "bun run css-development && bun run javascript-development",
    "javascript-development": "bun build ./js/index.js --outdir ./ --watch",
    "css-development": "postcss css/tailwind.css -o css/tailwind.min.css --watch",
    "javascript-production": "bun build ./js/index.js --outdir ./ --minify",
    "css-production": "tailwind -o css/tailwind.min.css --minify",
    "lint": "eslint js/**/*.js --fix",
    "production": "bun run javascript-production && bun run css-production && bun run lint"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "autoprefixer": "^10.4.15",
    "eslint-config-standard": "^17.1.0",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.3"
  }
}
